    <button class="navbar-toggler navbar-light" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">

     <%if(!currentuser) {%>
      <li>
        <a class="nav-link" href="/login" style="color: white" class="lione">Login</a>
      </li>
      <li >
        <a class="nav-link" href="/register" style="color: white" class="litwo">Sign Up</a>
      </li><%}
      else{%>
      <li class="nav-link" style="color: white"><strong><%=currentuser.username[0].toUpperCase()+currentuser.username.slice(1)%></strong></li>
      <li>
        <a class="nav-link" href="/logout" style="color: white">Log Out</a>
      </li>
      <%}%>
      </ul>
  </div>
</nav>

<div class="container">
    	<%if(message.length>0){%>
    <div class="alert alert-success" role="alert"><%=message%></div>
    	
		<%}%>
	</div>
<div class="container">
    	<%if(msg.length>0){%>
    <div class="alert alert-success" role="alert"><%=msg%></div>
    	
		<%}%></div>


	<div class="container">
		<div class="jumbotron" style="margin-top:8px; color: white; background:rgb(84,90,182);
			padding-bottom: 15px;
		background-image: url(https://www0.assets.heroku.com/assets/hero/hero-solutions-b4e56d975eb7691d7e4cebf87cc2ba51744535058f0f78adf7a36aae84ceca93.svg);">
			<div class="container">
<h1 >Welcome to ConnectTU!!</h1>
